    </screenshot>
  </screenshots>

  <url type="homepage">https://github.com/carrotIndustries/horizon</url>

  <provides>
    <binary>horizon-prj-mgr</binary>
    <id>net.carrotIndustries.horizon</id>
  </provides>

  <releases>
