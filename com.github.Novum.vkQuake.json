{
  "app-id": "com.github.Novum.vkQuake",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "vkquake",
  "finish-args": [
    "--device=dri",
    "--socket=pulseaudio",
    "--socket=x11",
    "--socket=host",
    "--socket=wayland"
  ],
  "modules": [
    {
      "name": "libmad",
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/mad/libmad-0.15.1b.tar.gz",
          "sha256": "bbfac3ed6bfbc2823d3775ebb931087371e142bb0e9bb1bee51a76a6e0078690"
        },
        {
          "type": "patch",
          "path": "libmad.patch"
        }
      ]
    },
    {
      "name": "vkquake",
      "buildsystem": "simple",
      "build-commands": [
        "cd Quake && make",
        "mkdir /app/bin",
        "install /run/build/vkquake/Quake/vkquake /app/bin/vkquake"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/Novum/vkQuake/archive/0.97.3.tar.gz",
          "sha256": "0d30b96610761a66cd00f069c489d140435f99bbb8b0ee84e1d4d328b68016dc"
        }
      ]
    }
  ]
}
