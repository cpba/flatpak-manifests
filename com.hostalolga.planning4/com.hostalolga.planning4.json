{
    "app-id": "com.hostalolga.planning4",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "19.08",
    "branch": "master",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": "org.freedesktop.Sdk.Extension.node12",
    "command": "run.sh",
    "separate-locales": false,
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Sound access */
        "--socket=pulseaudio",
        /* Network access */
        "--share=network",
        "--device=dri"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "NPM_CONFIG_LOGLEVEL": "info"
        }
    },
    "modules": [
        {
            "name": "node",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/node12/install-sdk.sh"
            ]
        },
        {
            "name": "planning4",
            "build-options" : {
                "append-path": "/usr/lib/sdk/node12/bin",
                "env": {
                    /* Need this for electron-download to find the cached electron binary */
                    "ELECTRON_CACHE": "/run/build/planning4/flatpak-node/electron-cache",
                    "npm_config_nodedir": "/usr/lib/sdk/node12"
                }
            },
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "path": "planning4-23.0.0.tar.xz",
                    "sha256": "72402125bd565692b326ea01a1337e0dbde8d5fa84dbe85118099bd73e309da8",
                    "dest": "main"
                },
                /* This file is autogenerated by: flatpak-npm-generator.py package-lock.json */
                "generated-sources.json",
                /* Wrapper to launch the app */
                {
                    "type": "script",
                    "dest-filename": "run.sh",
                    "commands": [ "export PATH=$PATH:/app/node/bin",
                                  "zypak-wrapper npm start --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2013.sh",
                    "commands": [ "export PATH=$PATH:/app/node/bin",
                                  "zypak-wrapper npm run 2013 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2014.sh",
                    "commands": [ "export PATH=$PATH:/app/node/bin",
                                  "zypak-wrapper npm run 2014 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2015.sh",
                    "commands": [ "export PATH=$PATH:/app/node/bin",
                                  "zypak-wrapper npm run 2015 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2016.sh",
                    "commands": [ "export PATH=$PATH:/app/node/bin",
                                  "zypak-wrapper npm run 2016 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2017.sh",
                    "commands": [ "export PATH=$PATH:/app/node/bin",
                                  "zypak-wrapper npm run 2017 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2018.sh",
                    "commands": [ "export PATH=$PATH:/app/node/bin",
                                  "zypak-wrapper npm run 2018 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2019.sh",
                    "commands": [ "export PATH=$PATH:/app/node/bin",
                                  "zypak-wrapper npm run 2019 --prefix=/app/main" ]
                }
            ],
            "build-commands": [
                "for icon_size in 16 32 48 64 128 256 512; do
                     install -d /app/share/icons/hicolor/${icon_size}x${icon_size}/apps
                     rsvg-convert --width=${icon_size} --height=${icon_size} main/icona.svg --format=png --output=/app/share/icons/hicolor/${icon_size}x${icon_size}/apps/com.hostalolga.planning4.png
                 done",
                 /* Install desktop files and launcher scripts */
                 /* and create icons for every year */
                "for any in 2013 2014 2015 2016 2017 2018 2019; do
                    desktop-file-install --dir=/app/share/applications main/anys/com.hostalolga.planning4.planning${any}.desktop
                    install run${any}.sh /app/bin/
                    for icon_size in 16 32 48 64 128 256 512; do
                        install -d /app/share/icons/hicolor/${icon_size}x${icon_size}/apps
                        rsvg-convert --width=${icon_size} --height=${icon_size} main/anys/${any}.svg --format=png --output=/app/share/icons/hicolor/${icon_size}x${icon_size}/apps/com.hostalolga.planning4.planning${any}.png
                    done
                  done",
                "desktop-file-install --dir=/app/share/applications main/com.hostalolga.planning4.desktop",
                /* Bundle app and dependencies */
                "mkdir -p /app/main /app/bin",
                "cp -ra main/* /app/main/",
                /* Install app wrapper */
                "install run.sh /app/bin/",
                /* Install npm dependencies */
                "npm install --prefix=/app/main --offline --cache=$FLATPAK_BUILDER_BUILDDIR/flatpak-node/npm-cache"
            ]
        }
    ]
}
