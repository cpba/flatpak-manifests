{
    "app-id": "com.hostalolga.planning4",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "stable",
    "branch": "stable",
    "sdk": "org.freedesktop.Sdk",
    "command": "run.sh",
    "separate-locales": false,
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Sound access */
        "--socket=pulseaudio",
        /* Network access */
        "--share=network",
        "--device=dri"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "NPM_CONFIG_LOGLEVEL": "info"
        }
    },
    "modules": [
        {
            "name": "nodejs",
            "cleanup": [
                "/include",
                "/share",
                "/app/lib/node_modules/npm/changelogs",
                "/app/lib/node_modules/npm/doc",
                "/app/lib/node_modules/npm/html",
                "/app/lib/node_modules/npm/man",
                "/app/lib/node_modules/npm/scripts"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://nodejs.org/dist/v8.11.3/node-v8.11.3.tar.gz",
                    "sha256": "0d7e795c0579226c8b197353bbb9392cae802f4fefa4787a2c0e678beaf85cce"
                }
            ]
        },
        {
            "name": "planning4",
            "build-options" : {
                "env": {
                    /* Need this for electron-download to find the cached electron binary */
                    "electron_config_cache": "/run/build/planning4/npm-cache"
                }
            },
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "path": "planning4-16.0.0.tar.xz",
                    "sha256": "6d3e2460b4ffce778c8ced3c55539018da13e5731fa6e28bb698eba344c4c654",
                    "dest": "main"
                },
                /* This file is autogenerated by: flatpak-npm-generator.py package-lock.json */
                "generated-sources.json",
                /* Wrapper to launch the app */
                {
                    "type": "script",
                    "dest-filename": "run.sh",
                    "commands": [ "npm start --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2013.sh",
                    "commands": [ "npm run 2013 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2014.sh",
                    "commands": [ "npm run 2014 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2015.sh",
                    "commands": [ "npm run 2015 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2016.sh",
                    "commands": [ "npm run 2016 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2017.sh",
                    "commands": [ "npm run 2017 --prefix=/app/main" ]
                },
                {
                    "type": "script",
                    "dest-filename": "run2018.sh",
                    "commands": [ "npm run 2018 --prefix=/app/main" ]
                }
            ],
            "build-commands": [
                "for icon_size in 16 32 48 64 128 256 512; do
                     install -d /app/share/icons/hicolor/${icon_size}x${icon_size}/apps
                     rsvg-convert --width=${icon_size} --height=${icon_size} main/icona.svg --format=png --output=/app/share/icons/hicolor/${icon_size}x${icon_size}/apps/com.hostalolga.planning4.png
                 done",
                 /* Install desktop files and launcher scripts */
                 /* and create icons for every year */
                "for any in 2013 2014 2015 2016 2017 2018; do
                    desktop-file-install --dir=/app/share/applications main/anys/com.hostalolga.planning4.planning${any}.desktop
                    install run${any}.sh /app/bin/
                    for icon_size in 16 32 48 64 128 256 512; do
                        install -d /app/share/icons/hicolor/${icon_size}x${icon_size}/apps
                        rsvg-convert --width=${icon_size} --height=${icon_size} main/anys/${any}.svg --format=png --output=/app/share/icons/hicolor/${icon_size}x${icon_size}/apps/com.hostalolga.planning4.planning${any}.png
                    done
                  done",
                "desktop-file-install --dir=/app/share/applications main/com.hostalolga.planning4.desktop",
                /* Install npm dependencies */
                "npm install --prefix=main --offline --cache=/run/build/planning4/npm-cache/",
                /* Bundle app and dependencies */
                "mkdir -p /app/main /app/bin",
                "cp -ra main/* /app/main/",
                /* Install app wrapper */
                "install run.sh /app/bin/"
            ]
        }
    ]
}
